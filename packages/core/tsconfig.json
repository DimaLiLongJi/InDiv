{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/core",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "noEmitHelpers": false,
    "lib": ["dom", "es2015.promise", "es5", "es2017"],
    "declaration": true,
    "paths": {
      "@indiv/*": ["../*"],
    }
  },
  "exclude": [
    "node_modules",
  ]
}
